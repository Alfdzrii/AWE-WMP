<!-- res/layout/item_playlist.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/playlist_cover_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_music_notes" /> <!-- Ganti dengan placeholder Anda -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/playlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Playlist"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/playlist_song_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 lagu" />
    </LinearLayout>

</LinearLayout>
